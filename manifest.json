{
  "manifest_version": 3,
  "name": "Discord Emoji Sidebar",
  "version": "1.0",
  "description": "Injects a sidebar from GitHub into Discord.com",
  "permissions": ["scripting"],
  "host_permissions": ["https://discord.com/*"],
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css", "sidebar.js"],
      "matches": ["https://discord.com/*"]
    }
  ]
}
